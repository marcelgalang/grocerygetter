<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div class="field">
    <%= f.label :username, "Select your name" %><br>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email, "Select your name" %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
<% end %>
