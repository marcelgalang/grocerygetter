<section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for([@list, @item]) do |f| %>
      <%= f.text_field :description, :class => "new-todo", :placeholder => (@item.errors.full_messages_for(:description).first || "Enter a new item...") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </header>
  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <%= render :collection => @list.items, :partial => "items/item_li", :as => :item %>
    </ul>
  </section>
  <footer class="footer">

<%= form_for @user do |f| %>

  <div class="field"><%= f.label :username, "Add a User" %><br>
    <%= f.collection_select(:id, @users, :id, :username) %>
  </div>

  <div class="actions">
    <%= f.submit "Add"  %>
  </div>
<% end %>

  </footer>
</section>
<%= link_to 'Logout', logout_path %> | <%= link_to 'Your Lists', lists_path %>
